#!/bin/bash

set -e

APP_DIR="/opt/ProfinityApp"
NGINX_CONF="/etc/nginx/sites-available/profinity"
NGINX_LINK="/etc/nginx/sites-enabled/profinity"

echo "ðŸ”§ Installing required packages..."
sudo apt update
sudo apt install -y nginx

echo "ðŸ“ Copying files to $APP_DIR..."
sudo mkdir -p "$APP_DIR"
sudo cp -r "$PWD/Web"/* "$APP_DIR"

echo "ðŸ›  Setting up NGINX config..."
sudo tee "$NGINX_CONF" > /dev/null <<EOF
server {
    listen 80;
    server_name localhost;

    root $APP_DIR;
    index index.html;

    location / {
        try_files \$uri /index.html;
    }
}
EOF

# Enable config
sudo ln -sf "$NGINX_CONF" "$NGINX_LINK"

echo "ðŸ”„ Restarting NGINX..."
sudo systemctl restart nginx

echo "âœ… Installation complete! Visit http://localhost to view the Profinity dashboard."
